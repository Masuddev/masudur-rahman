<script>
  document.addEventListener('DOMContentLoaded', function () {
    const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
    const mobileDropdown = document.getElementById('mobile-dropdown');
    const header = document.querySelector('.custom-banner__header');

    if (mobileMenuToggle && mobileDropdown && header) {
      mobileMenuToggle.addEventListener('click', function () {
        // Toggle active class on burger button
        mobileMenuToggle.classList.toggle('is-active');

        // Toggle dropdown menu
        mobileDropdown.classList.toggle('is-open');

        // Toggle header shadow class
        header.classList.toggle('has-dropdown-open');

        // Update aria-label for accessibility
        const isOpen = mobileDropdown.classList.contains('is-open');
        mobileMenuToggle.setAttribute('aria-label', isOpen ? 'Close menu' : 'Open menu');
      });

      // Close dropdown when clicking outside
      document.addEventListener('click', function (event) {
        if (!mobileMenuToggle.contains(event.target) && !mobileDropdown.contains(event.target)) {
          mobileMenuToggle.classList.remove('is-active');
          mobileDropdown.classList.remove('is-open');
          header.classList.remove('has-dropdown-open');
          mobileMenuToggle.setAttribute('aria-label', 'Open menu');
        }
      });

      // Close dropdown on escape key
      document.addEventListener('keydown', function (event) {
        if (event.key === 'Escape') {
          mobileMenuToggle.classList.remove('is-active');
          mobileDropdown.classList.remove('is-open');
          header.classList.remove('has-dropdown-open');
          mobileMenuToggle.setAttribute('aria-label', 'Open menu');
        }
      });
    }
  });
</script>


<section class="custom-banner">
  <!-- Header START -->
  <div class="custom-banner__header">
    <div class="container">
      <div class="custom-banner__header-left">
        <!-- DESKTOP: Logo (image/text) -->
        <a href="/" class="custom-banner__header-logo desktop-only">
          {% if section.settings.logo_type == 'image' %}
            {% if section.settings.logo_image != blank %}
              <img
                src="{{ section.settings.logo_image | image_url: width: 156 }}"
                alt="{{ section.settings.logo_image }}"
                width="{{ section.settings.logo_image_width | default: 156 }}"
                height="{{ section.settings.logo_image_height | default: 19 }} "
              >
            {% else %}
              <img
                src="{{ 'logo.svg'  | asset_url}}"
                alt="vision-logo"
                width="{{ section.settings.logo_image_width | default: 156 }}"
                height="{{ section.settings.logo_image_height | default: 19 }} "
              >
            {% endif %}
          {% elsif section.settings.logo_type == 'text' and section.settings.logo_text != blank %}
            <span class="custom-banner__logo-text custom-banner__logo-text-{{ section.id }}">
              {{- section.settings.logo_text -}}
            </span>
          {% endif %}
        </a>
        <button class="custom-banner__burger mobile-only" aria-label="Open menu" id="mobile-menu-toggle">
          <img src="{{ 'icon-mobile-menu.svg' | asset_url }}" alt="Menu" height="32" width="18" class="icon-menu">
          <img src="{{ 'icon-cross-mobile.svg' | asset_url }}" alt="Close" height="15" width="15" class="icon-cross">
        </button>
      </div>
      <div class="custom-banner__header-center">
        <!-- Desktop: Welcome message | Mobile: Logo -->
        <span class="custom-banner__welcome desktop-only">{{ section.settings.heading }}</span>
        <a href="/" class="custom-banner__logo mobile-only">
          {% if section.settings.logo_type == 'image' %}
            {% if section.settings.logo_image != blank %}
              <img
                src="{{ section.settings.logo_image | image_url: width: 80 }}"
                alt="Logo"
                width="{{ section.settings.logo_image_width | default: 156 }}"
                height="{{ section.settings.logo_image_height | default: 19 }}"
              >
            {% else %}
              <img
                src="{{ 'logo.svg' | asset_url }}"
                alt="Logo"
                width="{{ section.settings.logo_image_width | default: 156 }}"
                height="{{ section.settings.logo_image_height | default: 19 }}"
              >
